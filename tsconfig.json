{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build/",
    "target": "es6",
    "types": [
      "only"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["types"]
}
